{
	"name": "firelordjs",
	"description": "ðŸ”¥ High Precision Typescript Wrapper for Firestore Web, Providing Unparalleled Type Safe and Dev Experience",
	"version": "3.0.0",
	"scripts": {
		"prepublishOnly": "npm run build",
		"build": "pkgroll --clean-dist",
		"test": "vitest",
		"lint": "npx @biomejs/biome check --write"
	},
	"lint-staged": {
		"*": ["npm run lint"]
	},
	"files": ["dist"],
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"exports": {
		"require": {
			"types": "./dist/index.d.cts",
			"default": "./dist/index.cjs"
		},
		"import": {
			"types": "./dist/index.d.mts",
			"default": "./dist/index.mjs"
		}
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@vitest/coverage-v8": "^2.1.2",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"pkgroll": "^2.5.0",
		"tsx": "^4.19.1",
		"typescript": "^5.6.3",
		"vitest": "^2.1.2"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tylim88/firelordjs.git"
	},
	"bugs": {
		"url": "https://github.com/tylim88/firelordjs/issues"
	},
	"homepage": "https://firelordjs.com",
	"author": "tylim",
	"license": "MIT",
	"keywords": ["firebase", "firestore", "wrapper", "typescript", "type-safe"],
	"peerDependencies": {
		"firebase": "^11.7.1"
	}
}
